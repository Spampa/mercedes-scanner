<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Mercedes Scanner</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            background: white;
            border-radius: 15px;
            padding: 25px 30px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .header-left {
            flex: 1;
        }

        .header-left h1 {
            color: #667eea;
            font-size: 28px;
            margin-bottom: 5px;
        }

        .user-email {
            color: #666;
            font-size: 16px;
        }

        .header-right {
            display: flex;
            gap: 15px;
            align-items: center;
        }

        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-logout {
            background: #dc3545;
            color: white;
        }

        .btn-logout:hover {
            background: #c82333;
            transform: translateY(-2px);
        }

        .content {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: linear-gradient(135deg, #f6f9fc 0%, #e9ecef 100%);
            padding: 25px;
            border-radius: 12px;
            border-left: 5px solid #667eea;
        }

        .stat-card h3 {
            color: #667eea;
            font-size: 18px;
            margin-bottom: 10px;
        }

        .stat-card p {
            color: #333;
            font-size: 32px;
            font-weight: 700;
        }

        .action-section {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }

        .action-card {
            background: #f8f9fa;
            padding: 30px;
            border-radius: 12px;
            text-align: center;
            transition: transform 0.3s ease;
        }

        .action-card:hover {
            transform: translateY(-5px);
        }

        .action-card .icon {
            font-size: 48px;
            margin-bottom: 15px;
        }

        .action-card h3 {
            color: #333;
            margin-bottom: 10px;
        }

        .action-card p {
            color: #666;
            margin-bottom: 20px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
        }

        .banner {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 15px 25px;
            border-radius: 10px;
            font-weight: 600;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
            z-index: 1000;
            animation: slideInRight 0.3s ease-out;
            display: none;
        }

        .banner.success {
            background: #28a745;
            color: white;
        }

        @keyframes slideInRight {
            from {
                transform: translateX(400px);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        @media (max-width: 768px) {
            .header {
                text-align: center;
            }
            
            .header-left,
            .header-right {
                width: 100%;
                justify-content: center;
            }

            .stats-grid {
                grid-template-columns: 1fr;
                gap: 15px;
            }

            .action-section {
                grid-template-columns: 1fr;
                gap: 15px;
            }

            .stat-card,
            .action-card {
                padding: 20px;
            }

            .stat-card p {
                font-size: 24px;
            }

            .content {
                padding: 20px;
            }

            .banner {
                top: 10px;
                right: 10px;
                left: 10px;
                text-align: center;
            }
        }
    </style>
</head>
<body>
    <div id="banner" class="banner"></div>
    <div class="container">
        <div class="header">
            <div class="header-left">
                <h1>üöó Mercedes Scanner</h1>
                <p class="user-email" id="userEmail">Caricamento...</p>
            </div>
            <div class="header-right">
                <button class="btn btn-logout" onclick="logout()">
                    üö™ Esci
                </button>
            </div>
        </div>

        <div class="content">
            <div class="stats-grid">
                <div class="stat-card">
                    <h3>üìä Ricerche Attive</h3>
                    <p id="activeSearches">0</p>
                </div>
            </div>

            <div class="action-section">
                <div class="action-card">
                    <div class="icon">üîç</div>
                    <h3>Nuova Ricerca</h3>
                    <p>Crea una nuova ricerca personalizzata per trovare l'auto perfetta</p>
                    <button class="btn btn-primary" onclick="window.location.href='/create-tracking'">Crea Ricerca</button>
                </div>

                <div class="action-card">
                    <div class="icon">üìã</div>
                    <h3>Le Mie Ricerche</h3>
                    <p>Visualizza e gestisci tutte le tue ricerche attive</p>
                    <button class="btn btn-primary" onclick="window.location.href='/tracking'">Visualizza</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const userEmail = localStorage.getItem('userEmail');
        
        if (!userEmail) {
            window.location.href = '/login';
        } else {
            document.getElementById('userEmail').textContent = userEmail;
            loadUserStats();
        }

        function showBanner(message, type = 'success') {
            const banner = document.getElementById('banner');
            banner.textContent = message;
            banner.className = `banner ${type}`;
            banner.style.display = 'block';
            
            setTimeout(() => {
                banner.style.display = 'none';
            }, 3000);
        }

        function logout() {
            localStorage.removeItem('userEmail');
            showBanner('Logout effettuato con successo!');
            setTimeout(() => {
                window.location.href = '/login';
            }, 1500);
        }

        async function loadUserStats() {
            try {
                const response = await fetch(`/tracking-requests/by-email/${encodeURIComponent(userEmail)}`);
                
                if (response.ok) {
                    const data = await response.json();
                    document.getElementById('activeSearches').textContent = data.count || 0;
                }
            } catch (error) {
                console.error('Errore nel caricamento delle statistiche:', error);
            }
        }
    </script>
</body>
</html>
