<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nuova Ricerca - Mercedes Scanner</title>
    <script src="https://cdn.jsdelivr.net/npm/zod@3.22.4/lib/index.umd.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
        }

        .header {
            background: white;
            border-radius: 15px;
            padding: 25px 30px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .header-left h1 {
            color: #667eea;
            font-size: 28px;
            margin-bottom: 5px;
        }

        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .btn-back {
            background: #6c757d;
            color: white;
        }

        .btn-back:hover {
            background: #5a6268;
        }

        .content {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

        .form-section {
            margin-bottom: 30px;
        }

        .form-section h3 {
            color: #667eea;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 2px solid #e0e0e0;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            color: #333;
            font-weight: 600;
            margin-bottom: 8px;
            font-size: 14px;
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 12px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 14px;
            transition: border-color 0.3s ease;
        }

        .form-group input:focus,
        .form-group select:focus {
            outline: none;
            border-color: #667eea;
        }

        .form-group.error input,
        .form-group.error select {
            border-color: #dc3545;
        }

        .error-message {
            color: #dc3545;
            font-size: 13px;
            margin-top: 5px;
            display: none;
        }

        .form-group.error .error-message {
            display: block;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
        }

        .checkbox-group {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 10px;
            margin-top: 10px;
        }

        .checkbox-item {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .checkbox-item input[type="checkbox"] {
            width: auto;
            cursor: pointer;
        }

        .checkbox-item label {
            margin: 0;
            font-weight: normal;
            cursor: pointer;
        }

        .btn-submit {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 15px 40px;
            font-size: 16px;
            width: 100%;
            margin-top: 20px;
        }

        .btn-submit:hover {
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
        }

        .btn-submit:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .banner {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 15px 25px;
            border-radius: 10px;
            font-weight: 600;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
            z-index: 1000;
            animation: slideInRight 0.3s ease-out;
            display: none;
        }

        .banner.success {
            background: #28a745;
            color: white;
        }

        .banner.error {
            background: #dc3545;
            color: white;
        }

        @keyframes slideInRight {
            from {
                transform: translateX(400px);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        .success-modal {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
            z-index: 2000;
            display: none;
            max-width: 500px;
            width: 90%;
            text-align: center;
        }

        .success-modal .icon {
            font-size: 80px;
            margin-bottom: 20px;
        }

        .success-modal h2 {
            color: #28a745;
            margin-bottom: 15px;
        }

        .success-modal p {
            color: #666;
            line-height: 1.6;
            margin-bottom: 25px;
        }

        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1500;
            display: none;
        }

        .info-box {
            background: #e3f2fd;
            padding: 15px;
            border-radius: 8px;
            border-left: 4px solid #2196f3;
            margin-bottom: 20px;
        }

        .info-box p {
            color: #1565c0;
            font-size: 14px;
            line-height: 1.5;
        }

        @media (max-width: 768px) {
            .form-row {
                grid-template-columns: 1fr;
            }

            .content {
                padding: 20px;
            }

            .banner {
                top: 10px;
                right: 10px;
                left: 10px;
                text-align: center;
            }

            .checkbox-group {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div id="banner" class="banner"></div>
    <div id="overlay" class="overlay"></div>
    <div id="successModal" class="success-modal">
        <div class="icon">‚úÖ</div>
        <h2>Ricerca Creata con Successo!</h2>
        <p>Riceverai una email con il primo report delle auto disponibili che corrispondono ai tuoi criteri di ricerca.</p>
        <p>Ti invieremo aggiornamenti automatici ogni volta che troveremo nuove auto.</p>
        <button class="btn btn-submit" onclick="window.location.href='/tracking'">Vai alle Mie Ricerche</button>
    </div>

    <div class="container">
        <div class="header">
            <div class="header-left">
                <h1>üîç Nuova Ricerca</h1>
            </div>
            <div class="header-right">
                <a href="/home" class="btn btn-back">‚Üê Torna alla Home</a>
            </div>
        </div>

        <div class="content">
            <div class="info-box">
                <p>üìß Compila il form per creare una nuova ricerca personalizzata. Riceverai notifiche email ogni volta che troveremo auto corrispondenti ai tuoi criteri.</p>
            </div>

            <form id="trackingForm">
                <div class="form-section">
                    <h3>Termine di Ricerca (Opzionale)</h3>
                    <div class="info-box" style="margin-bottom: 15px;">
                        <p>üîç Inserisci un termine preciso per filtrare i risultati (es: "AMG", "PHEV", "4MATIC"). Lascia vuoto per cercare tutte le auto che corrispondono ai criteri selezionati.</p>
                    </div>
                    <div class="form-group">
                        <label for="searchValue">Filtra per termine specifico</label>
                        <input type="text" id="searchValue" placeholder="Es: AMG, PHEV, 4MATIC, Premium, ecc.">
                        <span class="error-message"></span>
                    </div>
                </div>

                <div class="form-section">
                    <h3>Modelli</h3>
                    <div class="checkbox-group">
                        <div class="checkbox-item">
                            <input type="checkbox" id="model1" name="model" value="1">
                            <label for="model1">Classe A</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="model2" name="model" value="2">
                            <label for="model2">Classe B</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="model3" name="model" value="3">
                            <label for="model3">Classe C</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="model4" name="model" value="4">
                            <label for="model4">Classe E</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="model5" name="model" value="5">
                            <label for="model5">Classe S</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="model6" name="model" value="6">
                            <label for="model6">GLA</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="model7" name="model" value="7">
                            <label for="model7">GLB</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="model8" name="model" value="8">
                            <label for="model8">GLC</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="model9" name="model" value="9">
                            <label for="model9">GLE</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="model10" name="model" value="10">
                            <label for="model10">GLS</label>
                        </div>
                    </div>
                    <span class="error-message" id="modelError"></span>
                </div>

                <div class="form-section">
                    <h3>Tipo di Carburante</h3>
                    <div class="checkbox-group">
                        <div class="checkbox-item">
                            <input type="checkbox" id="fuel1" name="fuel" value="benzina">
                            <label for="fuel1">Benzina</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="fuel2" name="fuel" value="diesel">
                            <label for="fuel2">Diesel</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="fuel3" name="fuel" value="ibrido">
                            <label for="fuel3">Ibrido</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="fuel4" name="fuel" value="elettrico">
                            <label for="fuel4">Elettrico</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="fuel5" name="fuel" value="metano">
                            <label for="fuel5">Metano</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="fuel6" name="fuel" value="gpl">
                            <label for="fuel6">GPL</label>
                        </div>
                    </div>
                    <span class="error-message" id="fuelError"></span>
                </div>

                <div class="form-section">
                    <h3>Fascia Chilometri</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="kilometerMin">Chilometri Minimi</label>
                            <input type="number" id="kilometerMin" min="0" max="475000" value="0">
                            <span class="error-message"></span>
                        </div>
                        <div class="form-group">
                            <label for="kilometerMax">Chilometri Massimi</label>
                            <input type="number" id="kilometerMax" min="0" max="475000" value="200000">
                            <span class="error-message"></span>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h3>Anno di Immatricolazione</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="yearMin">Anno Minimo</label>
                            <input type="number" id="yearMin" min="2015" max="2026" value="2020">
                            <span class="error-message"></span>
                        </div>
                        <div class="form-group">
                            <label for="yearMax">Anno Massimo</label>
                            <input type="number" id="yearMax" min="2015" max="2026" value="2026">
                            <span class="error-message"></span>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h3>Fascia di Prezzo (‚Ç¨)</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="priceMin">Prezzo Minimo</label>
                            <input type="number" id="priceMin" min="9500" value="9500">
                            <span class="error-message"></span>
                        </div>
                        <div class="form-group">
                            <label for="priceMax">Prezzo Massimo</label>
                            <input type="number" id="priceMax" min="9500" value="50000">
                            <span class="error-message"></span>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h3>Ordinamento Risultati</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="orderBy">Ordina Per</label>
                            <select id="orderBy">
                                <option value="price">Prezzo</option>
                                <option value="immatricolation">Immatricolazione</option>
                                <option value="km">Chilometri</option>
                                <option value="published">Data Pubblicazione</option>
                            </select>
                            <span class="error-message"></span>
                        </div>
                        <div class="form-group">
                            <label for="orderDir">Direzione</label>
                            <select id="orderDir">
                                <option value="ASC">Crescente</option>
                                <option value="DESC">Decrescente</option>
                            </select>
                            <span class="error-message"></span>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-submit" id="submitBtn">
                    Crea Ricerca
                </button>
            </form>
        </div>
    </div>

    <script>
        const userEmail = localStorage.getItem('userEmail');

        if (!userEmail) {
            window.location.href = '/login';
        }

        function showBanner(message, type = 'success') {
            const banner = document.getElementById('banner');
            banner.textContent = message;
            banner.className = `banner ${type}`;
            banner.style.display = 'block';
            
            setTimeout(() => {
                banner.style.display = 'none';
            }, 3000);
        }

        function showSuccessModal() {
            document.getElementById('overlay').style.display = 'block';
            document.getElementById('successModal').style.display = 'block';
        }

        function getSelectedValues(name) {
            return Array.from(document.querySelectorAll(`input[name="${name}"]:checked`))
                .map(cb => cb.value);
        }

        function clearErrors() {
            document.querySelectorAll('.form-group').forEach(group => {
                group.classList.remove('error');
            });
            document.querySelectorAll('.error-message').forEach(msg => {
                msg.textContent = '';
            });
        }

        function showError(fieldId, message) {
            const field = document.getElementById(fieldId);
            if (field) {
                const formGroup = field.closest('.form-group');
                if (formGroup) {
                    formGroup.classList.add('error');
                    const errorMsg = formGroup.querySelector('.error-message');
                    if (errorMsg) {
                        errorMsg.textContent = message;
                    }
                }
            } else {
                // Per checkbox groups
                const errorMsg = document.getElementById(fieldId + 'Error');
                if (errorMsg) {
                    errorMsg.style.display = 'block';
                    errorMsg.textContent = message;
                }
            }
        }

        document.getElementById('trackingForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            clearErrors();

            const submitBtn = document.getElementById('submitBtn');
            submitBtn.disabled = true;
            submitBtn.textContent = 'Creazione in corso...';

            const models = getSelectedValues('model');
            const fuels = getSelectedValues('fuel');

            const formData = {
                email: userEmail,
                searchValue: document.getElementById('searchValue').value.trim() || undefined,
                request: {
                    model: models,
                    fuel: fuels,
                    kilometerMin: parseInt(document.getElementById('kilometerMin').value),
                    kilometerMax: parseInt(document.getElementById('kilometerMax').value),
                    yearMin: parseInt(document.getElementById('yearMin').value),
                    yearMax: parseInt(document.getElementById('yearMax').value),
                    priceMin: parseInt(document.getElementById('priceMin').value),
                    priceMax: parseInt(document.getElementById('priceMax').value),
                    page: 0,
                    orderBy: document.getElementById('orderBy').value,
                    orderDir: document.getElementById('orderDir').value
                }
            };

            // Validazione base
            let hasError = false;

            if (models.length === 0) {
                showError('model', 'Seleziona almeno un modello');
                hasError = true;
            }

            if (fuels.length === 0) {
                showError('fuel', 'Seleziona almeno un tipo di carburante');
                hasError = true;
            }

            if (formData.request.kilometerMin < 0) {
                showError('kilometerMin', 'I chilometri minimi non possono essere negativi');
                hasError = true;
            }

            if (formData.request.kilometerMax > 475000) {
                showError('kilometerMax', 'I chilometri massimi non possono superare 475000');
                hasError = true;
            }

            if (formData.request.kilometerMin >= formData.request.kilometerMax) {
                showError('kilometerMin', 'I chilometri minimi devono essere inferiori ai massimi');
                hasError = true;
            }

            if (formData.request.yearMin < 2015) {
                showError('yearMin', 'L\'anno minimo deve essere almeno 2015');
                hasError = true;
            }

            if (formData.request.yearMax < 2015) {
                showError('yearMax', 'L\'anno massimo deve essere almeno 2015');
                hasError = true;
            }

            if (formData.request.yearMin > formData.request.yearMax) {
                showError('yearMin', 'L\'anno minimo deve essere inferiore al massimo');
                hasError = true;
            }

            if (formData.request.priceMin < 9500) {
                showError('priceMin', 'Il prezzo minimo deve essere almeno 9500‚Ç¨');
                hasError = true;
            }

            if (formData.request.priceMax < 9500) {
                showError('priceMax', 'Il prezzo massimo deve essere almeno 9500‚Ç¨');
                hasError = true;
            }

            if (formData.request.priceMin >= formData.request.priceMax) {
                showError('priceMin', 'Il prezzo minimo deve essere inferiore al massimo');
                hasError = true;
            }

            if (hasError) {
                submitBtn.disabled = false;
                submitBtn.textContent = 'Crea Ricerca';
                showBanner('Correggi gli errori nel form', 'error');
                return;
            }

            try {
                const response = await fetch('/tracking-requests', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });

                if (response.ok) {
                    showSuccessModal();
                } else {
                    const error = await response.json();
                    showBanner(error.message || 'Errore durante la creazione', 'error');
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Crea Ricerca';
                }
            } catch (error) {
                console.error('Errore:', error);
                showBanner('Errore di connessione', 'error');
                submitBtn.disabled = false;
                submitBtn.textContent = 'Crea Ricerca';
            }
        });
    </script>
</body>
</html>
